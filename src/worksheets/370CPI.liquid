---

<header>
  <!-- Button trigger modal -->
  <button
    type="button"
    class="btn btn-sm btn-outline-secondary"
    data-toggle="modal"
    data-target="#exampleModal"
  >
    + Add Project
  </button>
</header>

<div class="table-responsive">
  <table class="table table-sm table-bordered table-hover mb-0">
    <caption class="sr-only">
      {{
        title
      }}
    </caption>
    <thead class="thead-light">
      <tr>
        <th scope="col" rowspan="2" class="text-center align-middle">ID</th>
        <th scope="col" rowspan="2" class="align-middle">Project Name</th>
        <th scope="col" rowspan="2" class="align-middle">A. Points per Topic</th>
        <th scope="col" rowspan="2" class="align-middle">B. Times per Year</th>
        <th scope="col" rowspan="2" class="align-middle">CPI i =<br>A x B x 2</th>
        <th scope="col" colspan="5" class="text-center">Multipliers</th>
      </tr>
      <tr>
        <th scope="col" class="text-nowrap">PPI?</th>
        <th scope="col" class="text-nowrap">PPI (CPI)</th>
        <th scope="col" class="text-nowrap">STK?</th>
        <th scope="col" class="text-nowrap">STK (CPI)</th>
        <th scope="col" class="text-nowrap">CPI + PPI + STK</th>
      </tr>
    </thead>
    <tbody>
      {% for project in cpiprojects %}
      <tr>
        <th class="text-center" scope="row">CP#{{ forloop.index }}</th>
        <td class="text-nowrap">{{ project.name }}</td>
        <td class="text-center">{{ project.points_per_topic }}</td>
        <td class="text-center">{{ project.times_per_year }}</td>
        <td class="text-center">{{ project.tally }}</td>
        <td class="text-center">{{ project.ppi? }}</td>
        <td class="text-center">{{ project.ppi_cpi }}</td>
        <td class="text-center">{{ project.stk? }}</td>
        <td class="text-center">{{ project.stk_cpi }}</td>
        <td class="text-center">{{ project.cpi_ppi_stk }}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>

{% block modal %}
<!-- Modal -->
<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Project</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" style="display: grid; gap: 0.75rem">
        <fieldset class="px-3 pb-3 pt-1">
          <legend>Project Name</legend>
          <label for="formGroupExampleInput" class="sr-only"
            >Project Name</label
          >
          <input
            type="text"
            class="form-control"
            id="formGroupExampleInput"
            placeholder="Enter a project name"
          />
        </fieldset>
        <fieldset class="px-3 pb-3 pt-1">
          <legend>Points per Topic</legend>
          <label for="formGroupExampleInput2" class="sr-only"
            >Points per Topic</label
          >
          <input
            type="text"
            inputmode="numeric"
            class="form-control"
            id="formGroupExampleInput2"
            placeholder="Enter a number"
          />
        </fieldset>
        <fieldset class="px-3 pb-3 pt-1">
          <legend>Times per Year</legend>
          <label for="formGroupExampleInput" class="sr-only"
            >Times per Year</label
          >
          <input
            type="text"
            inputmode="numeric"
            class="form-control"
            id="formGroupExampleInput"
            placeholder="Enter a number"
          />
        </fieldset>
        <fieldset class="px-3 pb-3 pt-1">
          <legend>CPI i = A x B x 2</legend>
          <label for="formGroupExampleInput2" class="sr-only">CPI i = A x B x 2</label>
          <input
            type="text"
            inputmode="numeric"
            class="form-control"
            id="formGroupExampleInput2"
            placeholder="Enter a number"
          />
        </fieldset>
        <fieldset class="px-3 pb-3 pt-1">
          <legend>Multipliers</legend>
          <div class="form-group">
            <label for="formGroupExampleInput2">PPI?</label>
            <select class="custom-select">
              <option selected value="N">No</option>
              <option value="Y">Yes</option>
            </select>
          </div>
          <div class="form-group">
            <label for="formGroupExampleInput2">PPI(CPI)</label>
            <input
              type="text"
              inputmode="numeric"
              class="form-control"
              id="formGroupExampleInput2"
              placeholder="Enter a number"
            />
          </div>
          <div class="form-group">
            <label for="formGroupExampleInput2">STK?</label>
            <select class="custom-select">
              <option selected value="N">No</option>
              <option value="Y">Yes</option>
            </select>
          </div>
          <div class="form-group">
            <label for="formGroupExampleInput2">STK(CPI)</label>
            <input
              type="text"
              inputmode="numeric"
              class="form-control"
              id="formGroupExampleInput2"
              placeholder="Enter a number"
            />
          </div>
          <div class="form-group">
            <label for="formGroupExampleInput2">CPI + PPI + STK</label>
            <input
              type="text"
              inputmode="numeric"
              class="form-control"
              id="formGroupExampleInput2"
              placeholder="Enter a number"
            />
          </div>
        </fieldset>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-purple" data-dismiss="modal">
          Add
        </button>
      </div>
    </div>
  </div>
</div>
{% endblock %}

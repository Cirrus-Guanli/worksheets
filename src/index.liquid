---
layout: base.liquid
permalink: /
title: CRS Score Worksheets
eleventyExcludeFromCollections: true
---

<div class="container-fluid my-3" style="display: grid;gap:0.5rem;">

  <h1 class="display-4">Worksheets</h1>
  <dl>
    {% assign modalCollection = collections.all | where: "data.sheet_type", "modal" | sort: "data.title" %}
    <dt class="mb-1" style="font-size:1.25rem">Modal</dt>
    {% for page in modalCollection %}
      <dd class="pl-3"><a href="{{ page.url }}">{{ page.data.title }}</a></dd>
    {% endfor %}
    {% assign nomodalCollection = collections.all | where: "data.sheet_type", "nomodal" | sort: "data.title" %}
    <dt class="mb-1 mt-3" style="font-size:1.25rem">No-Modal</dt>
    {% for page in nomodalCollection %}
      <dd class="pl-3"><a href="{{ page.url }}">{{ page.data.title }}</a></dd>
    {% endfor %}
  </dl>

</div>
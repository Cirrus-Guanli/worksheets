</table>

{% block modal %}
<!-- Modal -->
<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Project</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <fieldset class="mb-2 px-3 pb-3 pt-1">
          <legend class="pl-0 ml-0">Project Name</legend>
          <label for="formGroupExampleInput" class="sr-only"
            >Project Name</label
          >
          <input
            type="text"
            class="form-control"
            id="formGroupExampleInput"
            placeholder="Enter a project name"
          />
        </fieldset>
        <fieldset class="mb-2 px-3 pb-3 pt-1">
          <legend class="pl-0 ml-0">Points per Topic</legend>
          <label for="formGroupExampleInput2" class="sr-only"
            >Points per Topic</label
          >
          <input
            type="text"
            inputmode="numeric"
            class="form-control"
            id="formGroupExampleInput2"
            placeholder="Enter a number"
          />
        </fieldset>
        <fieldset class="mb-2 px-3 pb-3 pt-1">
          <legend class="pl-0 ml-0">Times per Year</legend>
          <label for="formGroupExampleInput" class="sr-only"
            >Times per Year</label
          >
          <input
            type="text"
            inputmode="numeric"
            class="form-control"
            id="formGroupExampleInput"
            placeholder="Enter a number"
          />
        </fieldset>
        <fieldset class="mb-2 px-3 pb-3 pt-1">
          <legend class="pl-0 ml-0">Multipliers</legend>
          <div class="form-group">
            <label for="formGroupExampleInput2">PPI?</label>
            <select class="custom-select">
              <option selected value="N">No</option>
              <option value="Y">Yes</option>
            </select>
          </div>
          <div class="form-group">
            <label for="formGroupExampleInput2">STK?</label>
            <select class="custom-select">
              <option selected value="N">No</option>
              <option value="Y">Yes</option>
            </select>
          </div>
        </fieldset>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-purple" data-dismiss="modal">
          Add
        </button>
      </div>
    </div>
  </div>
</div>
{% endblock %}

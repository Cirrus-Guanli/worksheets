<table class="table table-sm table-bordered worksheet-table mb-0">
  <caption class="sr-only">{{ title }}</caption>
  <thead>
    <tr>
      <th class="bg-bg-blue align-middle" scope="col">Topic</th>
      <th class="bg-bg-blue align-middle" scope="col">Subtopic</th>
      <th class="bg-bg-blue align-middle text-center" scope="col">Max Pts</th>
      <th class="bg-bg-blue align-middle text-center" scope="col" style="width:10px;">Score</th>
    </tr>
  </thead>
  <tbody>
  {% for topic in webtopics %}
    {% assign outerloop = forloop.index %}
    {% assign num_subtopics = topic.subtopics | size %}
    {% for subtopic in topic.subtopics %}
      <tr>
        {% if forloop.first %}
          <th class="align-top" scope="row" rowspan="{{ topic.subtopics | size }}">{{ outerloop }}. {{ topic.name }}</th>
        {% endif %}
        <td class="align-middle">
          {% if topic.name == 'PPI Topic' %}
            <input type="text" class="form-control" id="inputDesc" placeholder="Description">
          {% else %}
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" id="inlineCheckbox_{{ outerloop }}-{{ forloop.index }}" value="option{{ forloop.index }}" onchange="toggleRow(this)">
              <label class="form-check-label" for="inlineCheckbox_{{ outerloop }}-{{ forloop.index }}">{{ subtopic.label }}</label>
            </div>
          {% endif %}
        </td>
        <td data-subtopic-points="{{ subtopic.points }}" class="text-center text-muted align-middle">{{ subtopic.points }}</td>
        {% if forloop.first %}
          <td rowspan="{{ num_subtopics }}" class="text-center align-middle">
            {% if topic.name == 'PPI Topic' %}
              <input type="text" class="form-control text-center" id="inputPts" placeholder="0">
            {% else %}
              0
            {% endif %}
          </td>
        {% endif %}
      </tr>
    {% endfor %}
  {% endfor %}
  </tbody>
  <tfoot>
    <tr>
      <th scope="row" colspan="3" class="text-right px-2 align-middle">WEB1 =</th>
      <td id="totalSubtotal" class="text-center align-middle">0</td>
    </tr>
  </tfoot>
</table>
